<h1><%= t('.list_title') %></h1>

<br>

<%= link_to t('.new'), new_student_path, class: 'btn btn-primary btn-lg' %>

<br>
<br>
<br>

<div class="panel panel-default">
  <table class="table">
      <thead>
        <tr>
          <th><%= t_attr(:student, :name) %></th>
          <th><%= t_attr(:student, :register_number) %></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% @students.each do |student| %>

        <tr>
          <td><%= student.name %></td>
          <td><%= student.register_number %></td>
          <td><%= link_to t('.edit'), edit_student_path(student), class: 'btn btn-default' %></td>
          <td><%= link_to t('.apply'), new_student_classroom_path(student), class: 'btn btn-default' %></td>
          <td><%= link_to t('.classrooms') + " (#{student.classrooms.count})", student_classrooms_path(student), class: 'btn btn-default' %></td>
        </tr>
    <% end %>
  </table>

</div>